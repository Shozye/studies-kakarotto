PROCEDURE increment(a) IS 
VAR x
BEGIN
    x := a + 1;
    a := a + 1;
END

PROCEDURE change_to_one(a) IS 
VAR x
BEGIN
    a := 1;
END

PROCEDURE assign(a, b) IS
BEGIN
    a := b;
END

PROCEDURE decrement(a) IS
VAR x, d
BEGIN 
    x := a;
    d := a;
    a := a - 1;
END

